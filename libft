#include "libft.h"
int	ft_atoi(const char *str)
{
	int sign;
	int	res;
	int i;

	sign = 1;
	res =  0;
	i = 0;
	while(str[i] == ' ' || (str[i] > 8 && str[i] < 14 ))
		i++;
	if (str[i] == '-'  || str[i] == '+')
	{
		if(str[i] == '-')
			sign = -1;
		i++;
	}
	while(str[i] >= '0' && str[i] <= '9' && str[i])
	{
		res = res * 10 - (str[i] - 48);
		i++;
	}
	return (res * sign);
}
